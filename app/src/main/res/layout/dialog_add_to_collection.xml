<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/add_container"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:text="Add to collection"
            android:textColor="@color/colorTitle"
            android:textSize="22sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_title">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:id="@+id/create_container"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/create_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:text="Create new collection"
            android:textColor="@color/colorTitle"
            android:textSize="22sp"/>

        <View
            android:id="@+id/cut1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/create_title"
            android:background="@color/colorBg"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cut1"
            android:layout_margin="16dp"
            android:background="@null"
            android:hint="name"
            android:inputType="text"
            android:maxLength="60"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_margin="16dp"
            android:background="@null"
            android:hint="Description (optional)"
            android:maxLength="250"
            android:maxLines="4"/>

        <CheckBox
            android:id="@+id/isPrivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_margin="16dp"
            android:drawablePadding="4dp"
            android:textColor="@color/colorTitle"
            android:drawableRight="@drawable/ic_lock_small"
            android:text="Make collection private"/>

        <View
            android:id="@+id/cut2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/cancel_btn"
            android:background="@color/colorBg"/>

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:padding="8dp"
            android:text="Cancel"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/create_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:padding="8dp"
            android:text="Create collection"
            android:textColor="@color/colorPrimary"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/dismiss_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:foreground="?android:selectableItemBackground"
        android:padding="12dp"
        android:src="@drawable/ic_clear"/>
</RelativeLayout>