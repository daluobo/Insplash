<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="daluobo.insplash.activity.SettingActivity">

        <include layout="@layout/toolbar"/>

        <LinearLayout
            android:id="@+id/user_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerVertical="true"
                android:transitionName="avatar"
                tools:src="@drawable/ic_account_box"
                tools:tint="@color/colorPrimaryDark"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="4dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="@color/colorTitle"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="name"/>

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    tools:text="username"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_count_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:id="@+id/total_photos_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/total_photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorTitle"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/photos"
                    android:textColor="@color/colorTitle"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/total_collections_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/total_collections"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorTitle"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/collections"
                    android:textColor="@color/colorTitle"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/total_likes_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/total_likes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorTitle"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/likes"
                    android:textColor="@color/colorTitle"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/follow_btn"
            style="@style/InfoText"
            android:layout_marginTop="8dp"
            android:drawableRight="@drawable/ic_arrow_right"
            android:foreground="?android:selectableItemBackground"
            android:padding="16dp"
            android:text="@string/following"
            android:textColor="@color/colorTitle"/>

        <TextView
            android:id="@+id/download_btn"
            style="@style/InfoText"
            android:layout_marginTop="1dp"
            android:drawableRight="@drawable/ic_arrow_right"
            android:foreground="?android:selectableItemBackground"
            android:padding="16dp"
            android:text="@string/download"
            android:textColor="@color/colorTitle"/>

        <LinearLayout
            android:id="@+id/view_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/view"
                android:textColor="@color/colorTitle"/>

            <TextView
                android:id="@+id/view_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="16dp"
                android:textColor="@color/colorTitle"
                android:textStyle="bold"
                tools:text="Compat"/>

            <ImageView
                android:id="@+id/view_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:src="@drawable/ic_arrow_drop_down"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/language_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingStart="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/language"
                android:textColor="@color/colorTitle"/>

            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="16dp"
                android:textColor="@color/colorTitle"
                android:textStyle="bold"
                tools:text="English"/>

            <ImageView
                android:id="@+id/language_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:src="@drawable/ic_arrow_drop_down"/>

        </LinearLayout>

        <TextView
            android:id="@+id/about_btn"
            style="@style/InfoText"
            android:layout_marginTop="8dp"
            android:drawableRight="@drawable/ic_arrow_right"
            android:foreground="?android:selectableItemBackground"
            android:padding="16dp"
            android:text="@string/about"
            android:textColor="@color/colorTitle"/>
    </LinearLayout>
</ScrollView>